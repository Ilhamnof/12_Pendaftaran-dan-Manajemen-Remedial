<%-include("headMhs.ejs")%>

<!-- Invoice -->
<div class="max-w-[85rem] px-4 sm:px-6 lg:px-8 mx-auto my-4 sm:mt-20">
    <!-- Grid -->
    <div
        class="mb-5 pb-5 flex justify-between items-center border-b border-gray-200"
    >
        <div>
            <h2 class="text-2xl font-semibold text-gray-800">Profil</h2>
        </div>
        <!-- Col -->

        <div class="inline-flex gap-x-2">
        </div>
        <!-- Col -->
    </div>
    <!-- End Grid -->

    <!-- Grid -->
    <div class="grid gap-3">
        <div>
            <img class="size-[100px] rounded-full mx-auto" src="https://images.unsplash.com/photo-1568602471122-7832951cc4c5?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80" alt="Image Description">
            <div class="grid space-y-3">
                <dl class="grid sm:flex gap-x-3 text-sm">
                    <dt class="min-w-36 max-w-[200px] text-gray-500">
                        Nama :
                    </dt>
                    <dd class="text-gray-800">
                        <a class="inline-flex items-center gap-x-1.5 text-blue-600 decoration-2 hover:underline font-medium"href="#">
                            <%= mahasiswa.nama %>
                        </a>
                    </dd>
                </dl>

                <dl class="grid sm:flex gap-x-3 text-sm">
                    <dt class="min-w-36 max-w-[200px] text-gray-500">
                        NIM :
                    </dt>
                    <dd class="font-medium text-gray-800">
                        <span class="block font-semibold"><%=mahasiswa.nim%></span>
                    </dd>
                </dl>

                <dl class="grid sm:flex gap-x-3 text-sm">
                    <dt class="min-w-36 max-w-[200px] text-gray-500">
                        Email :
                    </dt>
                    <dd class="font-medium text-gray-800">
                        <span class="block font-semibold"><%=mahasiswa.no_telpon%></span>
                    </dd>
                </dl>
                <dl class="grid sm:flex gap-x-3 text-sm">
                    <dt class="min-w-36 max-w-[200px] text-gray-500">
                        Alamat:
                    </dt>
                    <dd class="font-medium text-gray-800">
                        <span class="block font-semibold">Padang</span>
                        <address class="not-italic font-normal">
                        <%=mahasiswa.alamat%>
                        </address>
                    </dd>
                </dl>
            </div>
        <div>
        </div>
        
        <!-- Col -->
    </div>
    <!-- End Grid -->
</div>
<!-- End Invoice -->
<%- include ("modal.ejs")%>
<%- include ("footMhs.ejs")%>
